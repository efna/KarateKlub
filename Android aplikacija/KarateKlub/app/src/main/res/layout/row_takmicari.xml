<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/imgTakmicar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_user"
        />

    <TextView
        android:id="@+id/txtPrvaLinijaTakmicari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/imgTakmicar"
        android:text="ImeTakmicara"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDrugaLinijaTakmicari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrvaLinijaTakmicari"
        android:layout_toRightOf="@id/imgTakmicar"
        android:text="RegBroj" />
</RelativeLayout>