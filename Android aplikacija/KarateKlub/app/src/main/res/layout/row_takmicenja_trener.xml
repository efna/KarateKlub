<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imgTrophy"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/rezultati"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/txtPrvaLinijaTakmicenjaTrener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PrvaLinija"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgTrophy"
            />



        <TextView
            android:id="@+id/txtDrugaLinijaTakmicenjaTrener"
            android:layout_below="@id/txtPrvaLinijaTakmicenjaTrener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrugaLinija"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgTrophy"

            />
        <TextView
            android:id="@+id/txtTrecaLinijaTakmicenjaTrener"
            android:layout_below="@id/txtDrugaLinijaTakmicenjaTrener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrugaLinija"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgTrophy"

            />
        <TextView
            android:id="@+id/txtCetvrtaLinijaTakmicenjaTrener"
            android:layout_below="@id/txtTrecaLinijaTakmicenjaTrener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrugaLinija"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgTrophy"

            />
    </RelativeLayout>
</RelativeLayout>