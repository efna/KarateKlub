<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/first_place_medal"
            />

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/txtPrvaLinijaRezultatiTakmicenja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PrvaLinija"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"
            />



        <TextView
            android:id="@+id/txtDrugaLinijaRezultatiTakmicenja"
            android:layout_below="@id/txtPrvaLinijaRezultatiTakmicenja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DrugaLinija"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"

            />
        <TextView
            android:id="@+id/txtTrecaLinijaRezultatiTakmicenja"
            android:layout_below="@id/txtDrugaLinijaRezultatiTakmicenja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TrecaLinija"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"

            />
        <TextView
            android:id="@+id/txtCetvrtaLinijaRezultatiTakmicenja"
            android:layout_below="@id/txtTrecaLinijaRezultatiTakmicenja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CetvrtaLinija"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"

            />
    </RelativeLayout>



</RelativeLayout>