    <!-- timepicker -->


    <script src="~/Content/AdminLTE-2.4.2/bower_components/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>
    <script src="~/Content/AdminLTE-2.4.2/bower_components/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>


    <!-- AdminLTE App -->
    <script src="~/Content/AdminLTE-2.4.2/dist/js/adminlte.min.js"></script>
