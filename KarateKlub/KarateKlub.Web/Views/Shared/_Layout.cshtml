    <!-- DataTables -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>

    <script src="~/Content/AdminLTE-2.4.2/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

