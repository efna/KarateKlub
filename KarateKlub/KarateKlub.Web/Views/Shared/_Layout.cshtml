    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/dist/css/skins/_all-skins.min.css" />

    <!-- Morris chart -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/morris.js/morris.css" />

    <!-- jvectormap -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/jvectormap/jquery-jvectormap.css" />

    <!-- Date Picker -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />




    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/bootstrap-daterangepicker/daterangepicker.css" />

    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" />
