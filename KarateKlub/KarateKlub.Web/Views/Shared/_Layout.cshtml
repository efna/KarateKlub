    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    <script src="~/Content/AdminLTE-2.4.2/bower_components/select2/dist/js/select2.full.min.js"></script>


    <!-- Morris.js charts -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/raphael/raphael.min.js"></script>
    <script src="~/Content/AdminLTE-2.4.2/bower_components/morris.js/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
