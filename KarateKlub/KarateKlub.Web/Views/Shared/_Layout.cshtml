    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <!-- jQuery 3 -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/jquery/dist/jquery.min.js"></script>

    <script src="~/scripts/jquery-1.12.4.intellisense.js"></script>

    @*<script src="~/scripts/jquery-1.12.4.min.js"></script>*@
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/jquery-ui/jquery-ui.min.js"></script>
