    <!-- daterangepicker -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/moment/min/moment.min.js"></script>
    <script src="~/Content/AdminLTE-2.4.2/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>

    <!-- datepicker -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
