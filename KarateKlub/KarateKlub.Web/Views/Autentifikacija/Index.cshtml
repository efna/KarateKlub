@{
    Layout = null;
    string ErrorPoruka = (string)ViewData["PorukaCrvena"];

}


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Karate klub | Prijava</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/AdminLTE-2.4.2/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page" style="background-color:#337ab7;">
    <div class="login-box">
        <div class="login-logo">

            <img src="~/Content/prijavaNaSistem.png" width="120" style="margin:0 0 40px 110px;display:block" />

        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="background-color:#337ab7">
            <p class="login-box-msg"></p>
            <br />

            @using (Html.BeginForm("Index", "Autentifikacija", FormMethod.Post))
            {

                <div class="form-group has-feedback">
                    <input id="username" type="text" title="Korisničko ime" name="username" class="form-control" placeholder="Korisničko ime" required style="border-color:#337ab7;" oninvalid="this.setCustomValidity('Koriničko ime je obavezno polje')" oninput="setCustomValidity('')">
                    <span class="glyphicon glyphicon-user form-control-feedback" style="color:#337ab7;"></span>
                </div>
                <div class="form-group has-feedback">
                    
                    <input id="password" type="password" title="Lozinka" name="password" class="form-control" placeholder="Lozinka" required style="border-color:#337ab7;" oninvalid="this.setCustomValidity('Lozinka je obavezno polje')" oninput="setCustomValidity('')">
                    <span class="glyphicon glyphicon-lock form-control-feedback" style="color:#337ab7"></span>
                </div>

               
                    <br />
                    <br />
            
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-block btn-login" style="color:gray;">
                        Prijavi se
                        <i class="glyphicon glyphicon-log-in" style="color:#337ab7;margin-left:230px;"></i>
                    </button>
                    <br />
                    <br />
                </div>
              
            }

            @if (ErrorPoruka != null)
            {
                <br />

                <div class="alert alert-danger alert-dismissable fade in" style="border-color:#f2dede;">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>@ErrorPoruka</strong> 
                </div>

            <br />
            <br />
            }

        </div>

    </div>

    <!-- jQuery 3 -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/AdminLTE-2.4.2/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/AdminLTE-2.4.2/plugins/iCheck/icheck.min.js"></script>

</body>
</html>