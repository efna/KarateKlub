                    var pravilo2 = new RegExp(/[0-9]/, 'gi');
                    var pravilo3 = new RegExp(/[$#%&!?*,._+-]/, 'gi');

                    if (pravilo1.test(element.value) == false || pravilo2.test(element.value) == false
