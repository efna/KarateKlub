@{

    int brojTaba = (int)ViewData["tab"];
    int polaganjeId = (int)ViewData["polaganjeId"];
    string datumPolaganja = (string)ViewData["datumPolaganja"];
    int zvanje = (int)ViewData["zvanje"];
    int brojTabaParticipacije = (int)ViewData["brojTabaParticipacije"];
    ViewBag.Title = "Upravljanje podacima polaganja održanog " + datumPolaganja;
    ViewBag.PageTitle = "Upravljanje podacima polaganja";
}

<div style="text-align:left;">

    @Html.ActionLink(" ", "Index", "UpravljanjePolaganjimaStecenimZvanjima", new {brojTaba=1 }, new { @class = " btn-lg btn btn-primary glyphicon glyphicon-chevron-left", @style = "font-family_", @Title = "Nazad na prikaz polaganja" })

</div>
<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-xs-12">

            <ul class="nav nav-tabs nav-justified">

                <li id="ucesniciPolaganja">
                    <a id="ucesnici" href="#ucesniciPolaganjaTab" data-toggle="tab">Učesnici</a>
                </li>
                <li id="rezultatiPolaganja">
                    <a id="rezultati" href="#rezultatiPolaganjaTab" data-toggle="tab">Rezultati</a>
                </li>
             
             

            </ul>
            <div class="tab-content">

                <div id="ucesniciPolaganjaTab">

                    @Html.Action("Index", "UcesniciPolaganjaZaUcenickaZvanja", new {polaganjeId=polaganjeId,zvanje=zvanje })
                    
                </div>

                <div id="rezultatiPolaganjaTab">

                    @Html.Action("Index", "RezultatiPolaganjaUcenickaZvanja", new {polaganjeId=polaganjeId})
                    
                </div>

       

        
            </div>

        </div>

    </div>
</div>

<script>
   if (@brojTaba==1)
    {
       var ucesniciPolaganja = document.getElementById("ucesniciPolaganja");
       ucesniciPolaganja.classList.add("active");
       var ucesniciPolaganjaTab = document.getElementById("ucesniciPolaganjaTab");
       ucesniciPolaganjaTab.classList.add("tab-pane");
       ucesniciPolaganjaTab.classList.add("fade");
       ucesniciPolaganjaTab.classList.add("in");
       ucesniciPolaganjaTab.classList.add("active");
       var rezultatiPolaganjaTab = document.getElementById("rezultatiPolaganjaTab");
       rezultatiPolaganjaTab.classList.add("tab-pane");
       rezultatiPolaganjaTab.classList.add("fade");
     

    }

   else
   {
       var rezultatiPolaganja = document.getElementById("rezultatiPolaganja");
       rezultatiPolaganja.classList.add("active");
       var rezultatiPolaganjaTab = document.getElementById("rezultatiPolaganjaTab");
       rezultatiPolaganjaTab.classList.add("tab-pane");
       rezultatiPolaganjaTab.classList.add("fade");
       rezultatiPolaganjaTab.classList.add("in");
       rezultatiPolaganjaTab.classList.add("active");
       var ucesniciPolaganjaTab = document.getElementById("ucesniciPolaganjaTab");
       ucesniciPolaganjaTab.classList.add("tab-pane");
       ucesniciPolaganjaTab.classList.add("fade");
      
   }

</script>



