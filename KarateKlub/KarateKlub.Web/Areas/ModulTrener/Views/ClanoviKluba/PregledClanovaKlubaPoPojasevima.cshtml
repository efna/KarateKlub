@model KarateKlub.Web.Areas.ModulTrener.Models.ClanoviKlubaPregledClanovaKlubaPoPojasevimaVM
@using KarateKlub.Web.Areas.ModulTrener.Models

@{
    ViewBag.PageTitle = "Članovi";
    ViewBag.Title = "Članovi";
    Layout = null;
    int zvanje = (int)ViewData["zvanje"];

}

<style>
    .poravnanje {
        width: 50px;
        margin-left: 5px;
        display: inline-block;
    }

    .poravnanje2 {
        width: 200px;
        margin-left: 5px;
        display: inline-block;
    }
</style>
<br />
<br />
<div style="margin-left:15px;width:260px;">
    @using (Html.BeginForm("GoToUpravljanjeClanovimaKluba", "ClanoviKluba", FormMethod.Get, new { id = "FilterClanovaPoPojasevima" }))
    {
        @Html.DropDownListFor(model => model.zvanje, Model.Zvanja, new { @class = "form-control", onchange = "document.getElementById('FilterClanovaPoPojasevima').submit()" })

    }
</div>

<div id="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-title"></span>
                </div>
                <div class="panel-body">
                    <div class="table-primary">
                        <div class="table-responsive-vertical shadow-z-1">

                            <table style="border-top: 1px solid rgba(0, 0, 0, 0.12); font-family:Arial;" class="table table-hover table-striped table-bordered" id="tabelaClanoviKlubaPoPojasevima">
                                <thead style="font-size:16px; font-weight:500;">
                                    <tr>
                                        <th>Član</th>
                                        <th>Spol</th>
                                        <th>Dob</th>
                                        <th>Zvanje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ClanPodaci x in Model.clanovi)
                                    {

                                        <tr>
                                            <td>@x.Clan</td>
                                            <td>@x.Spol</td>
                                            <td>@x.StarosnaDob</td>
                                            <td>@x.Zvanje</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />


                </div>
            </div>

        </div>
    </div>

</div>

<script src="~/Content/AdminLTE-2.4.2/bower_components/jquery/dist/jquery.min.js"></script>

