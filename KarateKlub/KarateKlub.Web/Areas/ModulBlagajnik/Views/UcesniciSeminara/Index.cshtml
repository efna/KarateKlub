@model KarateKlub.Web.Areas.ModulBlagajnik.Models.UcesniciSeminaraIndexVM
@using KarateKlub.Web.Areas.ModulBlagajnik.Models

@{
    ViewBag.Title = "Učesnici seminara";
    ViewBag.PageTitle = "Učesnici seminara";
    Layout = null;
    int seminarId = (int)ViewData["seminarId"];
}
<style>
    .poravnanje {
        width: 50px;
        margin-left: 5px;
        display: inline-block;
    }
</style>

<div id="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-title"></span>
                </div>
                <div class="panel-body">
                    <div class="table-primary">
                        <div class="table-responsive-vertical shadow-z-1">

                            <table style="border-top: 1px solid rgba(0, 0, 0, 0.12); font-family:Arial;" class="table table-hover table-striped table-bordered" id="tabelaUcesniciSeminara">
                                <thead style="font-size:16px; font-weight:500;">
                                    <tr>
                                        <th>Učesnik</th>
                                        <th class="col-xs-1" style="text-align:center;">Spol</th>
                                        <th>Datum rođenja</th>
                                        <th>Telefon</th>
                                        <th>E-mail</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (UcesnikSeminaraPodaci x in Model.ucesniciSeminara)
                                    {
                                        <tr id="row_@x.Id">
                                            <td>@x.Osoba</td>
                                            <td class="col-xs-1" align="center">@x.Spol</td>
                                            <td>@x.DatumRodjenja.ToString("dd.MM.yyyy") - @x.MjestoRodjenja</td>
                                            <td>@x.KontaktTelefon</td>
                                            <td>@x.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />
                </div>
            </div>

        </div>
    </div>

</div>
<script src="~/Content/AdminLTE-2.4.2/bower_components/jquery/dist/jquery.min.js"></script>

