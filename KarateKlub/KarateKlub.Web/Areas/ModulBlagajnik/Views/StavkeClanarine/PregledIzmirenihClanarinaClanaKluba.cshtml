@model KarateKlub.Web.Areas.ModulBlagajnik.Models.StavkeClanarinePregledClanarinaClanaVM
@using KarateKlub.Web.Areas.ModulBlagajnik.Models

@{
    ViewBag.Title = "Izmirene članarine";
    ViewBag.PageTitle = "Izmirene članarine";
    int izmirena = (int)ViewData["izmirena"];
    int aktivan = (int)ViewData["aktivan"];
    int osobaId = (int)ViewData["osobaId"];
    Layout = null;

}
<style>
    .poravnanje {
        width: 50px;
        margin-left: 5px;
        display: inline-block;
    }
</style>
<br />
<br />
<div style="margin-left:25px;width:260px;">
    @using (Html.BeginForm("GoToUpravljanjeUplatamaClana", "ClanoviKluba", FormMethod.Get, new { id = "FilterIzmireneClanarine" }))
    {
        @Html.HiddenFor(Model => Model.osobaId)
        @Html.HiddenFor(Model => Model.aktivan)

        @Html.DropDownListFor(model => model.izmirena, Model.Izmirenost, new { @class = "form-control", onchange = "document.getElementById('FilterIzmireneClanarine').submit()" })

    }
</div>
<div id="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-title"></span>
                </div>
                <div class="panel-body">
                    <div class="table-primary">
                        <div class="table-responsive-vertical shadow-z-1">

                            <table style="border-top: 1px solid rgba(0, 0, 0, 0.12); font-family:Arial;" class="table table-hover table-striped table-bordered" id="tabelaStavkeClanarineClanaKlubaIzmirene">
                                <thead style="font-size:16px; font-weight:500;">
                                    <tr>
                                        <th>Članarina</th>
                                        <th>Priznanica</th>
                                        <th>Iznos</th>
                                        <th>Datum</th>
                                        <th>Mjesto</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (StavkaPodaci x in Model.stavka)
                                    {
                                        <tr id="row_@x.Id">
                                            <td>@x.Clanarina</td>
                                            <td>@x.BrojPriznanice</td>
                                            <td>@x.IznosKMBrojevima KM (@x.IznosKMSlovima)</td>
                                            <td>@x.DatumUplate</td>
                                            <td>@x.MjestoUplate</td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />
                    <hr />

                </div>
            </div>

        </div>
    </div>

</div>
<script src="~/Content/AdminLTE-2.4.2/bower_components/jquery/dist/jquery.min.js"></script>

