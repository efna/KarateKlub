       knjigovodjeTab.classList.add("fade");
       knjigovodjeTab.classList.add("in");
       knjigovodjeTab.classList.add("active");
       var sekretariTab = document.getElementById("sekretariTab");
       sekretariTab.classList.add("tab-pane");
