       treneriTab.classList.add("fade");
       treneriTab.classList.add("in");
       treneriTab.classList.add("active");
       var sekretariTab = document.getElementById("sekretariTab");
       sekretariTab.classList.add("tab-pane");
       sekretariTab.classList.add("fade");
       var blagajniciTab = document.getElementById("blagajniciTab");
       blagajniciTab.classList.add("tab-pane");
       blagajniciTab.classList.add("fade");
       var knjigovodjeTab = document.getElementById("knjigovodjeTab");
       knjigovodjeTab.classList.add("tab-pane");
       knjigovodjeTab.classList.add("fade");



    }

   else if(@brojTaba==2)
   {
       var sekretari = document.getElementById("sekretari");
       sekretari.classList.add("active");
       var sekretariTab = document.getElementById("sekretariTab");
       sekretariTab.classList.add("tab-pane");
       sekretariTab.classList.add("fade");
       sekretariTab.classList.add("in");
       sekretariTab.classList.add("active");
       var blagajniciTab = document.getElementById("blagajniciTab");
       blagajniciTab.classList.add("tab-pane");
       blagajniciTab.classList.add("fade");
       var knjigovodjeTab = document.getElementById("knjigovodjeTab");
       knjigovodjeTab.classList.add("tab-pane");
       knjigovodjeTab.classList.add("fade");
       var treneriTab = document.getElementById("treneriTab");
