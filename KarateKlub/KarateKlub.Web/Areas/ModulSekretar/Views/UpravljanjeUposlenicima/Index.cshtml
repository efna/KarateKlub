       var treneriTab = document.getElementById("treneriTab");
       treneriTab.classList.add("tab-pane");
       treneriTab.classList.add("fade");
       var blagajniciTab = document.getElementById("blagajniciTab");
       blagajniciTab.classList.add("tab-pane");
       blagajniciTab.classList.add("fade");
   }


</script>



