@model KarateKlub.Web.Areas.ModulSekretar.Models.PrisustvaNaSjednicamaUpravnogOdboraIndexVM
@using KarateKlub.Web.Areas.ModulSekretar.Models

@{
    ViewBag.Title = "Prisustvo na sjednici";
    ViewBag.PageTitle = "Prisustvo na sjednici";
    Layout = null;
   
}

<style>
    #btnSpremi {
        margin-left: 200px;
    }
</style>

<div id="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-title"></span>
                </div>
                <div class="panel-body">
                    <div class="table-primary">
                        <div class="table-responsive-vertical shadow-z-1">

                            <table style="border-top: 1px solid rgba(0, 0, 0, 0.12); font-family:Arial;" class="table table-hover table-striped table-bordered" id="tabelaPrisustvaClanovaUO">
                                <thead style="font-size:16px; font-weight:500;">
                                    <tr>
                                        <th>Ime i prezime</th>
                                        <th>Funkcija</th>
                                        <th class="col-xs-1" style="text-align:center;">Prisustvo</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (PrisutvaNaSjednicamaPodaci x in Model.prisustvaNaSjednici)
                                    {
                                        <tr>
                                            <td>@x.ImePrezime</td>
                                            <td>@x.Funkcija</td>
                                            <td class="col-xs-1" align="center">
                                                @if (@x.Prisutan == true)
                                                {
                                                    @Html.CheckBox("Prisutann", true, new { disabled = "disabled" })

                                                }
                                                else
                                                {
                                                    @Html.CheckBox("Prisutann", false, new { disabled = "disabled" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />
                    <hr />

                    @using (Ajax.BeginForm("Index", "PrisustvaNaSjednicamaUpravnogOdbora", new { sjednicaId = Model.sjednicaId}, new AjaxOptions { UpdateTargetId = "formaPrisustva" }))
                    {
                        <div style="text-align:center;">
                            <button type="submit" title="Uredi prisustva" class="btn-lg btn btn-warning" data-toggle="modal" data-target="#modalPrisustvaNaSjednici" data-backdrop="static" data-keyboard="false"><span class="fa fa-edit" aria-hidden="true"></span>Uredi prisustva</button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>

</div>

<script src="~/Content/AdminLTE-2.4.2/bower_components/jquery/dist/jquery.min.js"></script>

<script>
    $(function () {
        $('#tabelaPrisustvaClanovaUO').DataTable({

            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'retrieve': true,
            'autoWidth': false,
            'language': {
                'paginate': {
                    'previous': "Prethodna",
                    'next': 'Sljedeća',

                },
                'search': "Pretraga:",
                'lengthMenu': 'Broj zapisa po stranici:<select>' +
            '<option value="1">1</option>' +
            '<option value="2">2</option>' +
            '<option value="3">3</option>' +
            '<option value="4">4</option>' +
            '<option value="5">5</option>' +
            '<option value="10">10</option>' +
            '<option value="20">20</option>' +
            '<option value="30">30</option>' +
            '<option value="40">40</option>' +
            '<option value="50">50</option>' +
            '<option value="-1">Svi</option>' +
            '</select>',
                'info': "Prikaziva _END_ od ukupno _TOTAL_ zapisa",
                'emptyTable': "Nema dostupnih podataka",
                'zeroRecords': "Nema pronađenih rezultata",
                'processing': "Procesiranje",
                'infoEmpty': "Prikaziva 0 od ukupno 0 zapisa",
                'loadingRecords': "Učitavanje zapisa...",
                'infoPostFix': "",
                'infoFiltered': "(filtrirano od ukupno _MAX_ zapisa)"
            },

            'pageLength': 10,
            'columnDefs': [{
                'targets': [2],
                'orderable': false
            }, {
                'targets': [0, 1, 2],
                'width': '30%'
    }
            ]


        })

    });
</script>

<div id="modalPrisustvaNaSjednici" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#FF8800;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:white;">Prisustvo članova upravnog odbora</h4>
            </div>

            <div class="modal-body" id="formaPrisustva">
                <div class="text-center" id="Loading1" style="margin:auto;">
                    <img src="~/Content/AdminLTE-2.4.2/dist/img/gifLoading.gif" />
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" title="Odustani" style="margin-right:200px;width:170px;" class="btn-lg btn btn-danger" data-dismiss="modal"><span class="fa fa-eraser"></span> Odustani</button>

            </div>
        </div>

    </div>
</div>

